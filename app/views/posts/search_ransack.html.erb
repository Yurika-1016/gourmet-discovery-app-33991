<%=render 'share/header' %>
<%# 検索ゾーン %>
<div class="show-page-main">
  <%= render 'search_box' %>
</div> 

  <div class="prefecture_name">
  検索結果
  </div>
  <%# ransack検索の結果一覧 %>
  <div class= post-contents>
  <ul class="post-lists">
      <% if @results.present? %>
        <% @results.each do |result|%>
          <li class='post-list'>
          <%= link_to post_path(result.id) do %>
            <div class="image-list">
              <%= image_tag result.image, class:"post-image" if result.image.attached? %>
            </div>
          <% end %>
          </li>
        <% end %>
      <% else %>
        <div class="non-list">
          投稿がありません。新規投稿お待ちしています。
        </div>
      <% end %>
  </ul>
  <%= link_to "トップページに戻る", root_path %>
  </div>

</div>

<%=render 'share/footer' %>